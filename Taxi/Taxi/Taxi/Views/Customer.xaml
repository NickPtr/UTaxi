<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Taxi.Views.Customer" 
             BackgroundImage="bgg.png">
    <ContentPage.Content>
        
        <StackLayout Margin="0,150,0,0">
            <Image x:Name="Logo" WidthRequest="100" HeightRequest="100" />
            <Entry x:Name="First" Placeholder="Όνομα" PlaceholderColor="White" TextColor="White"  />
            <Entry x:Name="Last" Placeholder="Επίθετο"  PlaceholderColor="White" TextColor="White"/>
            <Entry x:Name="Telephone" Placeholder="Τηλέφωνο" Keyboard="Telephone"  PlaceholderColor="White" TextColor="White"/>
            <Button x:Name="Date" Text="Κλείσε Taxi" BackgroundColor="Yellow" Clicked="DateATaxi" />
            <Button x:Name="Call" Text="Κάλεσε Taxi" BackgroundColor="Yellow" Clicked="FindMyPlace"/>
        </StackLayout>
     
        
    </ContentPage.Content>
</ContentPage>